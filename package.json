{
  "name": "workflow-chain",
  "version": "1.0.2",
  "description": "Library for workflow processing using task chaining",
  "scripts": {
    "build": "tsc",
    "clean": "tsc --build --clean && rm -rf dist/*",
    "lint": "tsc --noEmit && eslint src/**/*.ts --fix",
    "test": "jest --coverage",
    "clean:install": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "build:local": "npm run clean && npm run build && npm pack",
    "pre-commit": "tsc && tsc --build --clean && lint-staged",
    "prepare": "husky install"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/constants",
    "dist/models",
    "dist/workflows",
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "dependencies": {
    "dotenv": "^16.0.3",
    "joi": "^17.7.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/jest": "^29.2.3",
    "@types/jest-when": "^3.5.2",
    "@types/lodash": "^4.14.189",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "esbuild": "^0.15.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.1.0",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "jest-when": "^3.5.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "keywords": [
    "adym",
    "npm",
    "chaining",
    "workflow"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lincolnadym/workflow-chain"
  },
  "author": "adymlincoln@gmail.com",
  "license": "MIT"
}
